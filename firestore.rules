rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin-only writes for tournament round content
    match /tournaments/{tournament}/rounds/{round} {
      allow read: if true; // public read
      allow write: if request.auth != null && request.auth.uid == 'fkLJJ2R6HbdwqoXSxrLUybZ0IdH2';
    }

    // Public reads for question content
    match /{document=**} {
      allow read: if true;
    }

    // Users can read/write their own metadata and rounds
    match /users/{uid}/meta/{docId} {
      // Allow owners to read their own meta
      allow read: if (request.auth != null && request.auth.uid == uid);
      // Users may write only their own meta
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    match /users/{uid}/rounds/{roundId} {
      // Allow owners to read their own rounds
      allow read: if (request.auth != null && request.auth.uid == uid);
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
  
}
